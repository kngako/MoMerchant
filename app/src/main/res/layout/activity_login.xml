<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".login">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/phone_number"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"/>

            <EditText
                android:id="@+id/mobile_pin"
                android:inputType="numberPassword"
                android:layout_below="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Pin"/>

            <Button
                android:id="@+id/login_or_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_pin"
                android:layout_toLeftOf="@+id/dash"
                android:text="Login"
                android:textColor="@color/brandColor"/>


            <View
                android:id="@+id/dash"
                android:layout_below="@+id/mobile_pin"
                android:layout_width="25dip"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/login_or_signup"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_pin"
                android:layout_toRightOf="@+id/dash"
                android:text="Sign up"
                android:textColor="@color/brandColor"/>
            </RelativeLayout>
</LinearLayout>
