<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    tools:context="com.yes.momerchant.MainMenuActivity">

    <Button
        android:id="@+id/view_account"
        android:text="View Account"
        android:textColor="@color/brandColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <View
        android:id="@+id/dash1"
        android:layout_below="@+id/view_account"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/transact"
        android:layout_below="@+id/dash1"
        android:text="Transact"
        android:textColor="@color/brandColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <View
        android:id="@+id/dash2"
        android:layout_below="@+id/transact"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/reports"
        android:layout_below="@+id/dash2"
        android:text="Reports"
        android:textColor="@color/brandColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <View
        android:id="@+id/dash3"
        android:layout_below="@+id/reports"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#000000" />

    <Button
        android:id="@+id/billing"
        android:layout_below="@+id/dash3"
        android:text="Billing"
        android:textColor="@color/brandColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
